                                <div class="testimony-slide active text-center">
                                    <figure>
                                        <img src="{{ assessment.image }}" alt="user">
                                    </figure>
                                    <blockquote>
                                        <p>"{{ assessment.description }}"</p>
                                    </blockquote>
                                    <span>{{ assessment.name }}, de <a href="#" class="twitter">{{ assessment.company }}</a></span>
